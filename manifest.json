{
  "name": "Screener",
  "version": "0.1.3",
  "description": "Take screenshots and get text from picture",
  "manifest_version": 3,
  "action": {
    "default_title": "Take a Screenshot"
  },
  "background": {
    "service_worker": "background.js",
    "type"          : "module"
  },
  "permissions": [
    "desktopCapture",
    "tabs",
    "activeTab",
    "clipboardWrite",
    "clipboardRead",
    "webRequest",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "tag.js",
        "message.js",
        "content_script.js"
      ],
      "css": [
        "./css/font.css",
        "./css/inject.css",
        "./css/message.css"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "/assets/icon-16.png",
    "32": "/assets/icon-32.png",
    "48": "/assets/icon-48.png",
    "128": "/assets/icon-128.png"
  }
}
