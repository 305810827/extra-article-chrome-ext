{
  "name": "Screenshots",
  "version": "0.1.0",
  "description": "Take screenshots",
  "manifest_version": 3,
  "action": {
    "default_title": "Take a Screenshot"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "desktopCapture",
    "tabs",
    "activeTab",
    "clipboardWrite",
    "clipboardRead",
    "webRequest",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./utils/sha-256.js","./utils/http.js","./api/ocr.js","message.js","content_script.js"],
      "css": ["./css/inject.css","./css/font.css","./css/message.css"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "/assets/icon-16.png",
    "32": "/assets/icon-32.png",
    "48": "/assets/icon-48.png",
    "128": "/assets/icon-128.png"
  }
}
